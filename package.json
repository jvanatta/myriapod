{
    "name": "myriapod",
    "description": "A simple theme designed for modular post construction. Derived from Casper.",
    "version": "1.0.0",
    "engines": {
        "ghost": ">=3.0.0",
        "ghost-api": "v3"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot-desktop.jpg",
        "mobile": "assets/screenshot-mobile.jpg"
    },
    "scripts": {
        "dev": "gulp",
        "zip": "gulp zip",
        "test": "gscan --v3 .",
        "pretest": "gulp build",
        "preship": "yarn test",
        "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; else echo \"Uncomitted changes found.\" && exit 1; fi",
        "postship": "git fetch && gulp release"
    },
    "author": {
        "name": "John Van Atta",
        "email": "2615333+jvanatta@users.noreply.github.com",
        "url": "https://github.com/jvanatta/"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Magazine"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "repository": {
        "type": "git",
        "url": ""
    },
    "bugs": "",
    "contributors": "",
    "devDependencies": {
        "@tryghost/release-utils": "0.3.3",
        "autoprefixer": "9.7.1",
        "beeper": "2.0.0",
        "cssnano": "4.1.10",
        "gscan": "3.1.1",
        "gulp": "4.0.2",
        "gulp-concat": "^2.6.1",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "8.0.0",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "5.0.1",
        "postcss-color-function": "4.1.0",
        "postcss-custom-properties": "9.0.2",
        "postcss-easy-import": "3.0.0",
        "pump": "3.0.0"
    },
    "browserslist": [
        "defaults"
    ],
    "config": {
        "posts_per_page": 25,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 1280
            },
            "m": {
                "width": 1920
            },
            "l": {
                "width": 3840
            },
            "xl": {
                "width": 7680
            }
        }
    }
}
